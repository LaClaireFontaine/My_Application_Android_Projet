<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="15dp"
    app:cardCornerRadius="15dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/retour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="retour" />

        <TextView
            android:id="@+id/titre"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="SHEILD"/>
    </LinearLayout>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/item_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/sheild" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/prodtv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:drawableLeft="@drawable/ic_publisher_bicolor"
                    android:text="serie_epis"
                    android:drawablePadding="10dp" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/proddate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="annee"
                    android:layout_marginLeft="10dp"
                    android:drawableLeft="@drawable/ic_calendar_bicolor"
                    android:drawablePadding="10dp" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/prodepis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="episodes"
                    android:layout_marginLeft="10dp"
                    android:drawableLeft="@drawable/ic_tv_bicolor"
                    android:drawablePadding="10dp" />
            </LinearLayout>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/containerDetails"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/histoire"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="l'histoire"
                android:background="@android:color/transparent"
                android:layout_marginLeft="10dp"
                android:onClick="showHistoireContent"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/personnages"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="les personnages"
                android:background="@android:color/transparent"
                android:layout_marginLeft="30dp"
                android:onClick="showPersonnagesContent"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/episodes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="les episodes"
                android:background="@android:color/transparent"
                android:layout_marginLeft="30dp"
                android:onClick="showEpisodesContent"/>
        </LinearLayout>

    </FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/historesu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="histoire bla bka bka fkoekpqzeok"
            android:visibility="gone"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/persolist"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="peo1 perso2 perso3"
            android:visibility="gone"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/epilist"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="epi1 epi2 epi3"
            android:visibility="gone"/>
    </LinearLayout>
</LinearLayout>
